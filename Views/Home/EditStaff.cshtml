@model Manager.Models.Staff

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title>Edit Staff</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
        integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body>
    <div class="container">
        <h1>Edit Staff</h1>
        <form asp-action="EditStaff" method="post" id="editForm">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label for="Name">Name:</label>
                <input type="text" class="form-control" id="Name" name="Name" asp-for="Name" required />
            </div>
            <div class="form-group">
                <label for="GrId">GrId:</label>
                <input type="text" class="form-control" id="GrId" name="GrId" asp-for="GrId" required />
            </div>
            <button type="button" class="btn btn-primary" onclick="confirmEdit()">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>

    <script>
        function confirmEdit() {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, edit it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById('editForm').submit();
                }
            });
        }
    </script>

    @if (TempData["Message"] != null)
    {
        <script>
            Swal.fire({
                title: 'Success!',
                text: '@TempData["Message"]',
                icon: 'success',
                confirmButtonText: 'OK'
            });
        </script>
    }

</body>

</html>
